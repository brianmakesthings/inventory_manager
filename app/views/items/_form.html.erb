<%= link_to "Back to All Items", items_path%>
<br>
<%= form_with model: item do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% item.errors.full_messages_for(:name).each do |message| %>
      <div class="error_message"><%= message %></div>
    <% end %>
  </div>

  <br>

  <div>
    <%= form.label :quantity %><br>
    <%= form.number_field :quantity %>
    <% item.errors.full_messages_for(:quantity).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <br>

  <div>
    <%= form.label :location %><br>
    <%= form.select :location, @locations.sort_by { |location| location.name}
                                          .map { |location| [location.name, location.id]}%>
  </div>
  
  <br>

  <div>
    <%= form.submit %>
  </div>
<% end %>