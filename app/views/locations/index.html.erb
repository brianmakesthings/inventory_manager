<h1>Locations</h1>

<%= link_to "New Location", new_location_path%>
<%= link_to "View All Items", root_path%>
<table>
    <tr>
        <th>Name</th>
        <th>Item Count</th>
    </tr>
    <% @locations.each do |location| %>
        <tr>
            <td><%= link_to location.name, location%></td>
            <td><%= @locations_item_count[location] || 0%></td>
        </tr>
    <% end %>
</table>